<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialogContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:padding="16dp">
        <TextView
            android:id="@+id/unitNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Unit Name"
            android:textAppearance="@style/TitleStyle"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/openingTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    android:text="4900"

                    android:textAppearance="@style/TitleStyle"

                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/MonthlyTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    android:text="Opening"
                    android:textAppearance="@style/RegularStyle"

                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/closingTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="4900"
                    android:textAppearance="@style/TitleStyle"

                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="Closing"
                    android:textAppearance="@style/RegularStyle"

                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/cashTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4900"
                    android:textAppearance="@style/TitleStyle"

                    android:layout_marginTop="24dp"
                    android:textColor="@color/green"/>
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    android:text="Cash"
                    android:textAppearance="@style/RegularStyle"

                    android:textColor="@color/black"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/dispOpenTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="4900"
                    android:textAppearance="@style/TitleStyle"

                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="Disp Opening"
                    android:textAppearance="@style/RegularStyle"

                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/dispCloseTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="4900"
                    android:textAppearance="@style/TitleStyle"
android:layout_marginTop="24dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="Disp Closing"
                    android:textAppearance="@style/RegularStyle"

                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/dailySaleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4900"
                    android:textAppearance="@style/TitleStyle"
android:layout_marginTop="24dp"

                    android:textColor="@color/blue"/>
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="Daily Sale"
                    android:textAppearance="@style/RegularStyle"

                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_rect_bg"
            android:text="Back"
            android:layout_marginTop="16dp"
            android:textAllCaps="false"
            android:textAppearance="@style/SubTitleStyle"
            android:textColor="@color/white"
            app:backgroundTint="@color/black" />

    </LinearLayout>
</LinearLayout>